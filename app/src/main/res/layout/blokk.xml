<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:animateLayoutChanges="true"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/jj"
        android:layout_width="50dp"
        android:layout_height="100sp"
        android:src="@drawable/sad_emoji"
        />
    <LinearLayout
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:paddingBottom="10dp"
        android:layout_toRightOf="@+id/jj"
        android:paddingRight="5dp"
        android:gravity="left"
        android:id="@+id/sag"
        android:orientation="vertical"
        android:layout_width="200dp"
        android:layout_height="100sp">

        <TextView
            android:id="@+id/name_surname"
            android:text="Shageldi Alyyew"
            android:textSize="20sp"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/username_degree"
            android:text="Shageldi-Student"
            android:textSize="10sp"
            android:textColor="#616161"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/FacultyTxt"
            android:text="Computer Faculty"
            android:textSize="10sp"
            android:textColor="#616161"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/departmenttxt"
            android:text="Information Sytems and technologies"
            android:textSize="10sp"
            android:textColor="#616161"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:gravity="right|center_vertical"
        android:layout_toRightOf="@+id/sag"
        android:layout_width="wrap_content"
        android:layout_height="100sp">
       <Button
           android:id="@+id/blokdan_ac"
           android:text="@string/blokla"
           android:background="@color/red_error"
           android:textColor="#FFF"
           android:layout_alignParentRight="true"
           android:padding="5dp"
           android:layout_marginRight="5dp"
           android:layout_width="100dp"
           android:layout_height="wrap_content"/>


    </RelativeLayout>


</RelativeLayout>