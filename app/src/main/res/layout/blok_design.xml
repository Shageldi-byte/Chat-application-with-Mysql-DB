<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:paddingBottom="10dp"
        android:paddingRight="5dp"
        android:gravity="left"

        android:id="@+id/blk"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="100sp">
        <TextView
            android:id="@+id/name_surname"
            android:text="Shageldi Alyyew"
            android:textSize="20sp"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/username_degree"
            android:text="Shageldi-Student"
            android:textSize="10sp"
            android:textColor="#616161"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/FacultyTxt"
            android:text="Computer Faculty"
            android:textSize="10sp"
            android:textColor="#616161"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/departmenttxt"
            android:text="Information Sytems and technologies"
            android:textSize="10sp"
            android:textColor="#616161"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/rel"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_height="100dp">

        <Button
            android:id="@+id/btn_blokla"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/red_error"
            android:text="@string/blokla"
            android:textColor="#FFF" />
    </LinearLayout>

</RelativeLayout>