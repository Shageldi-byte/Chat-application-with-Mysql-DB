<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Sazlamalar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dil_sayla"
            android:textSize="20dp"
            android:textColor="#000"
            android:fontFamily="cursive"

            />
        <Spinner
            android:layout_marginLeft="10dp"
            android:id="@+id/dil_sayla"
            android:layout_width="wrap_content"
            android:entries="@array/diller"
            android:spinnerMode="dialog"
            android:layout_height="40dp"/>
    </LinearLayout>

    <com.dd.processbutton.FlatButton
        android:id="@+id/select_lang"
        android:layout_below="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/yatda_sakla"
        android:layout_gravity="center"
        android:textColor="@android:color/white"
        custom:pb_colorNormal="@color/colorPrimaryDark"
        custom:pb_colorPressed="@color/colorPrimary" />

</LinearLayout>