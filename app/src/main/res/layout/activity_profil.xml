<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profil">

    <LinearLayout
        android:id="@+id/profile_surat"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/bg_profile"
        android:layout_height="200dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </RelativeLayout>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/ic_account_box_black_24dp"
            />

        <TextView
            android:id="@+id/At_fam1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alyyev Shageldi"
            android:textColor="#fff"
            android:textStyle="normal"
            android:fontFamily="cursive"
            android:textSize="20dp"
            />





    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/profile_surat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:paddingLeft="25dp"
           >
           <ImageView
               android:layout_width="30dp"
               android:layout_height="30dp"
               android:background="@drawable/name"/>
           <TextView
               android:layout_marginLeft="25dp"
               android:layout_gravity="center"
               android:id="@+id/at_fam"
               android:textSize="15dp"
               android:textStyle="italic"
               android:textColor="#000"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Shageldi Alyyew"
               />

       </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="25dp"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/username"/>
            <TextView
                android:layout_marginLeft="25dp"
                android:layout_gravity="center"
                android:id="@+id/username_profil"
                android:textSize="15dp"
                android:textStyle="italic"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shageldi"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="25dp"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/degree"/>
            <TextView
                android:layout_marginLeft="25dp"
                android:layout_gravity="center"
                android:id="@+id/degree_profil"
                android:textSize="15dp"
                android:textStyle="italic"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Student"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="25dp"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/faculty"/>
            <TextView
                android:layout_marginLeft="25dp"
                android:layout_gravity="center"
                android:id="@+id/faculty_profile"
                android:textSize="15dp"
                android:textStyle="italic"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Oguz han"
                />

        </LinearLayout>






    </LinearLayout>

</RelativeLayout>