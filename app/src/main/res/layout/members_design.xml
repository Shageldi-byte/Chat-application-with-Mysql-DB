<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:gravity="center"
        android:layout_width="100sp"
        android:layout_height="100sp">
        <ImageView
            android:id="@+id/imageUsers"
            android:src="@drawable/username"
            android:layout_width="70sp"
            android:layout_height="80sp"/>
        <ImageView
            android:id="@+id/On_off"
            android:layout_marginTop="50sp"
            android:layout_marginLeft="45sp"
            android:src="@drawable/status_online_sm"
            android:layout_width="20sp"
            android:layout_height="20sp"/>
    </RelativeLayout>

    <LinearLayout
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:paddingBottom="10dp"
        android:paddingRight="5dp"
        android:gravity="left"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="100sp">
        <TextView
            android:id="@+id/name_surname"
            android:text="Shageldi Alyyew"
            android:textSize="20sp"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/username_degree"
            android:text="Shageldi-Student"
            android:textSize="10sp"
            android:textColor="#616161"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/FacultyTxt"
            android:text="Computer Faculty"
            android:textSize="10sp"
            android:textColor="#616161"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/departmenttxt"
            android:text="Information Sytems and technologies"
            android:textSize="10sp"
            android:textColor="#616161"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
</RelativeLayout>