<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/gowjarenk"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">



    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/jj"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/topar_ady">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:id="@+id/topar_ady"
            android:inputType="text"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

    <ListView
        android:layout_below="@+id/jj"
        android:id="@+id/group_members"
        android:divider="#3F51B5"
        android:layout_above="@+id/relative"
        android:dividerHeight="1dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/gowjarenk"
        android:layout_marginTop="5dp"
        android:paddingLeft="0dp"
        android:paddingBottom="10dp"

        >


        <com.dd.processbutton.FlatButton
            android:id="@+id/crt_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/topar_DÃ¶ret"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:textColor="@android:color/white"
            custom:pb_colorNormal="@color/colorPrimaryDark"
            custom:pb_colorPressed="@color/colorPrimary" />
    </RelativeLayout>



</RelativeLayout>